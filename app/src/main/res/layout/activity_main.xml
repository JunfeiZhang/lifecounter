            android:id="@+id/p4minFive" />

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p4min" />

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p4add" />
        <Button
            android:text="+5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/p4addFive" />

    </LinearLayout>

</RelativeLayout>
